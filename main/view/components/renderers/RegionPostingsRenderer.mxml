<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:s="library://ns.adobe.com/flex/spark"
                xmlns:mx="library://ns.adobe.com/flex/mx"
                autoDrawBackground="true">
    <fx:Declarations>
        <mx:CurrencyFormatter id="curFormatter" currencySymbol="$" thousandsSeparatorTo="," />
        <mx:NumberFormatter id="numFormatter" thousandsSeparatorTo="," />
        <mx:DateFormatter id="dFormatter" formatString="MM/DD/YYY" />
    </fx:Declarations>
    <s:states>
        <s:State name="normal" />
        <s:State name="hovered" />
    </s:states>
    <s:layout>
        <s:VerticalLayout gap="5" paddingBottom="10"
                          paddingLeft="10"
                          paddingRight="10"
                          paddingTop="10"
                          verticalAlign="middle" />
    </s:layout>
    <!-- Address and Zestimate -->
    <s:Group>
        <s:layout>
            <s:HorizontalLayout gap="5"/>
        </s:layout>
        <!-- Address Info -->
        <s:Group width="100%"
                 height="100%">
            <!-- border/background rectangle -->
            <s:Rect left="0"
                    right="0"
                    top="0"
                    bottom="0"
                    radiusX="4"
                    radiusY="4">
                <s:stroke>
                    <mx:SolidColorStroke alpha="{getStyle('borderAlpha')}"
                                         color="{getStyle('borderColor')}"
                                         weight="1" />
                </s:stroke>
                <s:fill>
                    <mx:SolidColor alpha="0.3"
                                   alpha.hovered="0.8"
                                   color.hovered="{getStyle('rollOverColor')}"
                                   color.normal="{getStyle('contentBackgroundColor')}" />
                </s:fill>
            </s:Rect>
            <s:Group width="100%"
                     height="100%">
                <s:layout>
                    <s:VerticalLayout gap="5"
                                      paddingBottom="10"
                                      paddingLeft="10"
                                      paddingRight="10"
                                      paddingTop="10"
                                      verticalAlign="top" />
                </s:layout>
                <s:Label text="Property Address"
                         fontSize="12"
                         fontWeight="bold" />
                <s:Label text="{data.street}"
                         fontSize="10" />
                <s:Label text="{data.city}, {data.state}"
                         fontSize="10" />
                <s:Label text="{data.zipcode}"
                         fontSize="10" />
                
                <s:Label text="Price: {curFormatter.format(data.price)}"
                         fontSize="10" />
                <s:RichEditableText id="richTxtImg"
                                    bottom="20"
                                    left="2"
                                    editable="false"
                                    focusEnabled="false"
                                    toolTip="Zillow Real Estate Search">
                    <s:textFlow>
                        <s:TextFlow>
                            <s:p>
                                <s:a href="http://www.zillow.com">
                                    <s:img width="150"
                                           height="40">
                                        <s:source>http://www.zillow.com/widgets/GetVersionedResource.htm?path=/static/logos/posted_sm_btn.gif</s:source>
                                    </s:img>
                                </s:a>
                            </s:p>
                        </s:TextFlow>
                    </s:textFlow>
                </s:RichEditableText>
            </s:Group>
        </s:Group>
        <!-- Details Data -->
        <s:Group width="100%"
                 height="100%">
            <!-- border/background rectangle -->
            <s:Rect left="0"
                    right="0"
                    top="0"
                    bottom="0"
                    radiusX="4"
                    radiusY="4">
                <s:stroke>
                    <mx:SolidColorStroke alpha="{getStyle('borderAlpha')}"
                                         color="{getStyle('borderColor')}"
                                         weight="1" />
                </s:stroke>
                <s:fill>
                    <mx:SolidColor alpha="0.3"
                                   alpha.hovered="0.8"
                                   color.hovered="{getStyle('rollOverColor')}"
                                   color.normal="{getStyle('contentBackgroundColor')}" />
                </s:fill>
            </s:Rect>
            <s:Group width="100%"
                     height="100%">
                <s:layout>
                    <s:VerticalLayout gap="5"
                                      paddingBottom="10"
                                      paddingLeft="10"
                                      paddingRight="10"
                                      paddingTop="10"
                                      verticalAlign="middle" />
                </s:layout>
                <s:Label text="Property Details"
                         fontSize="12"
                         fontWeight="bold" />
                <s:Label text="Last Refresh Date: {dFormatter.format(data.lastRefreshedDate)}"
                         fontSize="10" />
                <s:Label text="Use Code: {data.useCode}"
                         fontSize="10" />
                <s:Label text="Lot Size Sq Ft: {numFormatter.format(data.lotSizeSqFt)}"
                         fontSize="10" />
                <s:Label text="Finished Size Sq Ft: {numFormatter.format(data.finishedSqFt)}"
                         fontSize="10" />
                <s:Label text="Bathrooms: {data.bathrooms}"
                         fontSize="10" />
                <s:Label text="Bedrooms: {data.bedrooms}"
                         fontSize="10" />
            </s:Group>
        </s:Group>
    </s:Group>
    
    <!-- External Links -->
    <s:Group width="100%" height="100%">
        <!-- border/background rectangle -->
        <s:Rect left="0"
                right="0"
                top="0"
                bottom="0"
                radiusX="4"
                radiusY="4">
            <s:stroke>
                <mx:SolidColorStroke alpha="{getStyle('borderAlpha')}"
                                     color="{getStyle('borderColor')}"
                                     weight="1" />
            </s:stroke>
            <s:fill>
                <mx:SolidColor alpha="0.5"
                               alpha.hovered="0.8"
                               color.hovered="0xfffafa"
                               color.normal="0xf5f5f5" />
            </s:fill>
        </s:Rect>
        <s:Group width="100%" height="100%">
            <s:layout>
                <s:VerticalLayout gap="2"
                                  paddingBottom="10"
                                  paddingLeft="10"
                                  paddingRight="10"
                                  paddingTop="10"
                                  verticalAlign="middle"/>
            </s:layout>
            <s:Label text="Links"
                     fontSize="12"
                     fontWeight="bold" />
            <s:RichEditableText id="richTxtHomeDetails"
                                fontSize="10"
                                editable="false"
                                focusEnabled="false">
                <s:textFlow>
                    <s:TextFlow>
                        <s:p>
                            <s:a href="{data.homedetails}">See more home details about {data.street} on Zillow.com</s:a>
                        </s:p>
                    </s:TextFlow>
                </s:textFlow>
            </s:RichEditableText>
        </s:Group>
    </s:Group>
</s:ItemRenderer>
