<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
        [HostComponent("widgets.Zillow.main.view.ui.PostingSearchView")]
    </fx:Metadata>

	<!-- SkinParts
	name=searchButton, type=spark.components.Button, required=true
	name=searchInput, type=mx.controls.TextInput, required=true
	-->
	<s:layout>
		<s:VerticalLayout horizontalAlign="center"
						  verticalAlign="middle"
						  gap="5" />
	</s:layout>
	<s:Label text="Enter City and State and/or Zip Code" />
	<s:TextInput id="searchInput" />

	<s:HGroup verticalAlign="middle"
			  horizontalAlign="center"
			  paddingBottom="5"
			  paddingLeft="2"
			  paddingRight="2"
			  paddingTop="5">
        <s:Label text="Property Types" />
		<s:DropDownList id="ddlType"
						labelField="name"
						width="140"
						selectedIndex="0">
			<s:dataProvider>
				<s:ArrayList>
					<fx:Object data="all"
							   name="All" />
					<fx:Object data="fsbo"
                               name="For Sale By Owner" />
					<fx:Object data="fsba"
							   name="For Sale By Agent" />
					<fx:Object data="mmm"
							   name="Make Me MoveÂ®" />
				</s:ArrayList>
			</s:dataProvider>
		</s:DropDownList>
	</s:HGroup>
    
    <s:HGroup verticalAlign="middle"
              horizontalAlign="center"
              paddingBottom="5"
              paddingLeft="2"
              paddingRight="2"
              paddingTop="5">
        <s:Label text="Show Rentals?" />
        <s:RadioButton id="rbYes"
                       label="Yes"
                       selected="false" />
        <s:RadioButton id="rbNo"
                       label="No"
                       selected="true" />
    </s:HGroup>
    
	<s:Button id="searchButton"
			  label="Search" />
</s:Skin>
